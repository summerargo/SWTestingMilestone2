import static org.junit.Assert.*;
import org.junit.Before;
import org.junit.After;
import org.junit.Test;
import java.io.File;
import java.sql.Connection;

public class functionalTestSuite {

    //Create obj for testing
    DatabaseConnection db = new DatabaseConnection(“/testPathway.csv”);
    private functionalTestSuite testObj;

    //Set up for testing
    @Before
    public void SetUp() {
        db = new DatabaseConnection(“/testPathway.csv”)
        functionalTestSuite testObj = new functionalTestSuite();
    }

    //Tear down after testing
    @After
    public void TearDown () {
        db = null;
        testObj = null;
    }

    //Tests whether the system connects to the database
    @Test
    public void testDBConnection() {
        functionalTestSuite validConnect = new functionalTestSuite();
        assertEquals(validConnect, db.connect());
    }

    //Tests the AddProjectToDB method
    @Test
    public void testAddProject() {
        db.connect();
        testObj.AddProjectToDB(“proj1”, 1234, “Java”);
        testObj.AddProjectToDB(“cour1”, 1235, “Intro to Java”);
        assertTrue(db.ReadFile());
    }

    //Tests the RemoveProjectFromDB method
    @Test
    public void testRemoveProject() {
        db.connect();
        testObj.SearchThroughFile(“proj1”);
        testObj.SearchThroughFile(1234);
        testObj.RemoveProjectFromDB(1234);
        assertTrue();
    }

    //Tests the SearchThroughFile
    @Test
    public void testSearchFile() {
        testObj.AddToProjectDB(“proj1”, 1234, “Java”);
        testObj.AddToCourseDB(“cour1”, 1235, “Intro to Java”);
        testObj.SearchThroughFile(“proj1”);
        testObj.SearchThroughFile(1235);
        //Assert true if searching for the name and id of a project or course returned it
    }
}
